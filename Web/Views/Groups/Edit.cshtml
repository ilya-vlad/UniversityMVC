@model Group
@{    
    ViewData["Title"] = Localizer["EditGroup"];    
}

<h4>@ViewData["Title"] - @ViewBag.OldName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <partial name="_FormGroup" />
            <div class="form-group">
                @Html.HiddenFor(m => m.Id)
                <input type="submit" value="@Localizer["Save"]" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/courses/@ViewBag.CourseId/groups">@Localizer["Back"]</a>
</div>