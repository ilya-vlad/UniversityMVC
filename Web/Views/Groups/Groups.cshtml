@using MVC.DataAccess
@using MVC.Common
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer
@model UnitOfWork
@{
    ViewData["Title"] = Localizer["ListGroups"];
    int i = 1;
    var course = Model.Courses.GetById(ViewBag.CourseId);
    var alert = TempData["AlertMessage"];
    string typeAlert = string.Empty;
    if (TempData["AlertStatus"] != null && (bool)TempData["AlertStatus"])
        typeAlert = "alert-success";
    else
        typeAlert = "alert-danger";

    void RemoveModal(Group group)
    {
        <div id="removeModal_@group.Id" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@Localizer["Remove"]</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>@Localizer["RemoveGroup?"] "@group.Name"?</p>
                    </div>
                    <div class="modal-footer">
                        <a href="groups/delete/@group.Id/" class="btn btn-danger" role="button" aria-pressed="true">@Localizer["Remove"]</a>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">@Localizer["Close"]</button>
                    </div>
                </div>
            </div>
        </div>
    }
}
<!DOCTYPE html>

<html lang="@CultureInfo.CurrentCulture"
      @if (CultureInfo.CurrentCulture.TextInfo.IsRightToLeft) { <text> dir="rtl">
</text>}
<head>
    <title>@Localizer["Groups"]</title>
</head>
<body>

    @if (alert != null)
    {
        <text>
            <div class="alert @typeAlert" role="alert">
                @alert
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </text>
    }

    <div class="container">
        <div class="row">
            <div class="col-3">
                <a href="~/courses" class="btn btn-sm btn-dark" role="button" aria-pressed="true">&#8249;&#8249;&#8249;</a>
            </div>
            <div class="col">
                <h3>@Localizer["Course"] @course.Name</h3>
            </div>
            <div class="col-1">
                <a href="~/groups/create" class="btn btn-sm btn-success" role="button" aria-pressed="true">@Localizer["Create"]</a>
            </div>
        </div>
    </div>

    <table class="table table-hover table-sm">
        <thead class="thead-dark">
            <tr>
                <th class="align-middle text-center">#</th>
                <th class="align-middle col-2">@Localizer["NameGroup"]</th>
                <th class="align-middle col-2 text-center">@Localizer["CountStudents"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model.Groups.GetAll().Where(x => x.CourseId == course.Id))
            {
                int countStudents = Model.Students.GetAll().Where(x => x.GroupId == group.Id).Count();
                <tr id="@group.Id">
                    <td class="align-middle text-center font-weight-bold">@i</td>
                    <td name="nameGroup" class="align-middle">@group.Name</td>
                    <td class="align-middle text-center">@countStudents</td>
                    <td class="align-middle text-right">
                        <a href="groups/@group.Id" class="btn btn-sm btn-dark" role="button" aria-pressed="true">@Localizer["Students"]</a>
                        <a href="groups/edit/@group.Id/" class="btn btn-sm btn-success" role="button" aria-pressed="true">@Localizer["Edit"]</a>                        
                        <a href="" class="btn btn-sm btn-danger" role="button" aria-pressed="true" data-toggle="modal" data-target="#removeModal_@group.Id">@Localizer["Remove"]</a>
                    </td>
                </tr>
                i++;
                RemoveModal(group);
            }
        </tbody>
    </table>
</body>
</html>