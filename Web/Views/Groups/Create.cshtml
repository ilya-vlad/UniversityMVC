@model Group
@{    
    ViewData["Title"] = Localizer["CreateGroup"];    
}

<h4>@Localizer["CreateGroup"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <partial name="_FormGroup"/>
            <div class="form-group">
                <input type="submit" value="@Localizer["Create"]" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/courses/@ViewBag.CourseId/groups">@Localizer["Back"]</a>
</div>