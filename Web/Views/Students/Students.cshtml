@using MVC.DataAccess
@using MVC.Common
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer
@model UnitOfWork
@{
    ViewData["Title"] = Localizer["ListStudents"];
    int i = 1;
    var group = Model.Groups.GetById(ViewBag.GroupId);
    var alert = TempData["AlertMessage"];
    string typeAlert = string.Empty;
    if (TempData["AlertStatus"] != null && (bool)TempData["AlertStatus"])
        typeAlert = "alert-success";
    else
        typeAlert = "alert-danger";

    void RemoveModal(Student student)
    {
        <div id="removeModal_@student.Id" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@Localizer["Remove"]</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>@Localizer["RemoveStudent?"] "@student.FirstName @student.LastName"?</p>
                    </div>
                    <div class="modal-footer">
                        <a href="@student.GroupId/students/delete/@student.Id/" class="btn btn-danger" role="button" aria-pressed="true">@Localizer["Remove"]</a>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">@Localizer["Close"]</button>
                    </div>
                </div>
            </div>
        </div>
    }
}
<!DOCTYPE html>

<html lang="@CultureInfo.CurrentCulture"
      @if (CultureInfo.CurrentCulture.TextInfo.IsRightToLeft) { <text> dir="rtl">
</text>}

<head>
    <title>@Localizer["Students"]</title>
</head>
<body>
    @if (alert != null)
    {
        <text>
            <div class="alert @typeAlert" role="alert">
                @alert
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </text>
    }
    <div class="container">
        <div class="row">
            <div class="col-3">
                <a href="~/courses/@group.CourseId/groups" class="btn btn-sm btn-dark" role="button" aria-pressed="true">&#8249;&#8249;&#8249;</a>               
            </div>
            <div class="col">
                <h3>@Localizer["Group"] @group.Name</h3>
            </div>
            <div class="col-1">
                <a href="~/students/create" class="btn btn-sm btn-success" role="button" aria-pressed="true">@Localizer["Create"]</a>
            </div>
        </div>
    </div>


    <table class="table table-hover table-sm">
        <thead class="thead-dark">
            <tr>
                <th class="align-middle text-center">#</th>
                <th class="align-middle">@Localizer["FirstName"]</th>
                <th class="align-middle">@Localizer["LastName"]</th>
                <th class="align-middle">@Localizer["DateOfBirth"]</th>
                <th class="align-middle">@Localizer["ExamScore"]</th>
                <th class="align-middle"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students.GetAll().Where(x => x.GroupId == group.Id))
            {
                <tr id="@student.Id">
                    <td class="align-middle text-center font-weight-bold">@i</td>
                    <td name="FirstName" class="align-middle">@student.FirstName</td>
                    <td name="LastName" class="align-middle">@student.LastName</td>
                    <td name="DateOfBirt" class="align-middle">@student.DateOfBirth.ToString("d")</td>
                    <td name="ExamScore" class="align-middle">@student.ExamScore</td>
                    <td class="align-middle text-right">
                        <a href="@student.GroupId/students/edit/@student.Id/" class="btn btn-sm btn-success" role="button" aria-pressed="true">@Localizer["Edit"]</a>
                        <a href="" class="btn btn-sm btn-danger" role="button" aria-pressed="true" data-toggle="modal" data-target="#removeModal_@student.Id">@Localizer["Remove"]</a>
                    </td>
                </tr>
                i++;
                RemoveModal(student);
            }
        </tbody>
    </table>
</body>
</html>