@model Student
@{
    ViewData["Title"] = Localizer["CreateStudent"];
}
<h4>@Localizer["CreateStudent"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <partial name="_FormStudent"/>                
            <div class="form-group">
                <input type="submit" value="@Localizer["Create"]" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/courses/@ViewBag.CourseId/groups/@ViewBag.GroupId">@Localizer["Back"]</a>
</div>
