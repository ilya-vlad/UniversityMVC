@using MVC.Common
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer
@model Student
@{
    ViewData["Title"] = Localizer["EditStudent"];
    var groups = new SelectList((IEnumerable<Group>)ViewData["Groups"], "Id", "Name");

}
<!DOCTYPE html>

<html>
<head>
    <title>@Localizer["EditStudent"]</title>

</head>
<body>
    <h4>@Localizer["EditStudent"] @Model.FirstName @Model.LastName</h4>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditStudent" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">@Localizer["FirstName"]</label>
                    <input asp-for="FirstName" class="form-control" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                    <div class="invalid-feedback">@Localizer["EmptyFirstName"]</div>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">@Localizer["LastName"]</label>
                    <input asp-for="LastName" class="form-control" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                    <div class="invalid-feedback">@Localizer["EmptyLastName"]</div>
                </div>
                <div class="form-group">
                    <label asp-for="GroupId" class="control-label">@Localizer["GroupId"]</label>
                    @Html.DropDownListFor(m => m.GroupId, groups as IEnumerable<SelectListItem>, new { @class = "custom-select" })
                </div>
                

                <div class="form-group">
                    <label asp-for="DateOfBirth" class="control-label">@Localizer["DateOfBirth"]</label>
                    <input asp-for="DateOfBirth" class="form-control" required />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    <div class="invalid-feedback">@Localizer["EmptyDateOfBirth"]</div>
                </div>
                <div class="form-group">
                    <label asp-for="ExamScore" class="control-label">@Localizer["ExamScore"]</label>
                    <input asp-for="ExamScore" class="form-control" required />
                    <span asp-validation-for="ExamScore" class="text-danger"></span>
                    <div class="invalid-feedback">@Localizer["EmptyExamScore"]</div>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="@Localizer["Save"]" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>